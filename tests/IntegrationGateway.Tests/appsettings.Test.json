{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    }
  },
  
  "Jwt": {
    "SecretKey": "ThisIsATestSecretKeyThatIsAtLeast32CharactersLongForTesting123456",
    "Issuer": "TestIssuer",
    "Audience": "TestAudience",
    "ExpirationMinutes": 60,
    "ValidateIssuer": false,
    "ValidateAudience": false,
    "ValidateLifetime": false,
    "ValidateIssuerSigningKey": false
  },
  
  "ErpService": {
    "BaseUrl": "http://localhost:5051",
    "TimeoutSeconds": 15,
    "MaxRetries": 2
  },
  
  "WarehouseService": {
    "BaseUrl": "http://localhost:5052",
    "TimeoutSeconds": 15,
    "MaxRetries": 2
  },
  
  "Cache": {
    "Enabled": true,
    "DefaultExpirationSeconds": 5,
    "GetProductsV1QueryExpirationSeconds": 5,
    "GetProductsV2QueryExpirationSeconds": 5,
    "GetProductQueryExpirationSeconds": 5,
    "GetProductV2QueryExpirationSeconds": 5
  },
  
  "Idempotency": {
    "Enabled": true,
    "DefaultExpirationTime": "00:15:00",
    "SemaphoreTimeout": "00:00:03",
    "MaxConcurrentOperations": 50
  },
  
  "Security": {
    "Cors": {
      "Enabled": false
    },
    "RateLimiting": {
      "Enabled": false
    },
    "SsrfProtection": {
      "Enabled": false
    }
  },
  
  "CircuitBreaker": {
    "FailureThreshold": 5,
    "BreakDuration": "00:02:00",
    "SamplingDuration": 30
  }
}